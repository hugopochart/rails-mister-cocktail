  <div class="container" , style="height: 100vh;>
    <div class="wrapper text-center">
      <div class="row">
        <div class="col-xs-12 show-disp">
          <img class="img-cust" src="http://www.capital8bysodexo.com/wp-content/themes/capital8-2/img-src/espaces/logo-espace-cocktail-select.png" height="200" width="200">
          <h2> <%= @cocktail.name %></h2>

          <% @cocktail.ingredients.each_with_index do |elt,ind| %>
            <div class="comment-show-desc ">
              <p> Ingredient: <%= elt.name%></p>
              <p class= "dose-pad"> dose: <%= @cocktail.doses[ind].description%></p>

            </div>
          <% end%>
          <div >
            <button class = "btn btn-primary btn-top"><%= link_to "new Ingredient", new_cocktail_dose_path(@cocktail), style: "color: #FFFFFF"%></button>
          </div>
        </div>
      </div>
    </div>
    <button class="btn-bot btn"> <%= link_to "All Cocktails", cocktails_path, style: "color: #ee0000"%></button>
  </div>
