<h1>All Cocktails</h1>
<div class="container", style="height: 100vh;">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-6">
        <div class="card">
        <%= cl_image_tag cocktail.photo, height: 50, width: 50, :radius=>"max", crop: :fill, class: "card-user" %>

        <div class="card-category"><%= link_to cocktail.name, cocktail_path(cocktail), style: "color: #ee0000" %></div>
        <div class="card-description">
          <% cocktail.doses.each do |dose| %>
          <p>
            <%= dose.description%>
            <%= dose.ingredient.name%>
          </p>
          <%end%>
        </div>
        <div class="card-description1">
        </div>

          <%= link_to "",cocktail_path(cocktail), class: "card-link" %>


        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "+", new_cocktail_path%>
